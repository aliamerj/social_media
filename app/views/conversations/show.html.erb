<section style="background-color: #eee">
  <div class="container py-10">

    <div class="row d-flex justify-content-center">
      <div class="col-md-12 col-lg-12 col-xl-12">

        <div class="card">
          <div class="card-body" data-mdb-perfect-scrollbar="true" style="position: relative;height: 70vh;">
            <%= render 'message', messages:@messages  %>
          </div>
          <div class="card-footer d-flex justify-content-center align-items-center ">
             <%= image_tag(current_user.avatar.url, alt: 'avatar', class: "avatar-user") %>
            <%= form_with model: @message,url:  conversation_messages_path(@conversation), class: "row g-10 d-flex justify-content-center" do |f| %>
             <%= f.hidden_field :conversation_id, value: @conversation.id %>
              <%= f.hidden_field :sender_id, value: current_user.id %>
            <div class="col-md-10">
              <%= f.text_field :body,input_html: {autofocus: true }, class: "form-control form-control-lg", placeholder: "Message", id: "message_input" %>
          </div>
             <div class="col-md-2">
             <%= f.submit :send, class: "btn btn-dark btn-lg" %>
             </div>
        <% end %>
          </div>


      </div>
    </div>

  </div>
</section>
